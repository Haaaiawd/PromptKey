{
  "productName": "prompt-manager",
  "version": "0.1.0",
  "identifier": "com.prompt-manager.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "./src",
    "features": ["withGlobalTauri"]
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "PM.ico",
      "../src/icons/32x32.png",
      "../src/icons/128x128.png",
      "../src/icons/128x128@2x.png",
      "../src/icons/icon.icns",
      "../src/icons/icon.png"
    ]
  },
  "plugins": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["**"]
      },
      "core": {
        "all": true
      }
    }
  }
}